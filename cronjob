pipeline {
    agent any
    parameters {
      string(name: 'patcheat', defaultValue: 'start', description: '')
      string(name: 'patchqa', defaultValue: 'start', description: '')
      string(name: 'hotfixes', defaultValue: 'start', description: '')
      string(name: 'dev', defaultValue: 'start', description: '')
    }
    triggers {
        parameterizedCron('''
            04 21 * * * %patcheat=stop
            04 21 * * * %patchqa=stop
            04 21 * * * %hotfixes=stop
            04 21 * * * %dev=stop
        ''')
    }
    stages {
        stage('Example') {
            steps {
                echo "${params.patcheat} ${params.patchqa} ${params.hotfixes} ${params.dev}"
                script { currentBuild.description = "${params.GREETING} ${params.PLANET}" }
            }
        }
    }
}

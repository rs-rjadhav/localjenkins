pipeline {
    agent any
    parameters {
      string(name: 'githubRepo', defaultValue: 'configuration-management-service', description: 'GitHub Repository name')
      string(name: 'githubRepoBranch', defaultValue: 'master', description: 'GitHub Repository branch')
      string(name: 'patcheat', defaultValue: '', description: '')
      string(name: 'patchqa', defaultValue: '', description: '')
      string(name: 'hotfixes', defaultValue: '', description: '')
      string(name: 'dev', defaultValue: '', description: '')
    }
    triggers {
        parameterizedCron('''
            56 10 * * * %patcheat && %patchqa && %hotfixes && %dev=Stop
        ''')
    }
    stages {   
        stage('Git clone') {
            steps {
                echo "gitClone repository: "${params.githubRepo}", branch: "${params.githubRepoBranch}""
                }
            }
        }
    }
